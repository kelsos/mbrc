<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kelsos.mbrc.ui.fragments.PlaylistsFragment">

  <android.support.v7.widget.RecyclerView
      android:id="@+id/playlist_list"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_above="@+id/view"
      android:paddingTop="@dimen/list_padding_top"
      tools:listitem="@layout/ui_list_single" />

  <fragment
      android:id="@+id/now_playing_mini_control"
      android:name="com.kelsos.mbrc.ui.fragments.MiniControlFragment"
      android:layout_width="wrap_content"
      android:layout_height="@dimen/mini_control_height"
      android:layout_alignParentBottom="true"
      tools:layout="@layout/ui_fragment_mini_control" />

  <View
      android:id="@+id/view"
      android:layout_width="fill_parent"
      android:layout_height="1dp"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:layout_alignTop="@+id/now_playing_mini_control"
      android:background="@color/primary_dark" />

</RelativeLayout>
